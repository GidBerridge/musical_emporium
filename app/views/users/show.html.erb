<div class="container" style="width: 200rem; margin-top: 32px;">
  <h2 style="text-align:center;">Your Bookings</h2>
  <div class="cards">
    <% @bookings.each do |booking| %>
      <div class="card-product">
        <div class="img-frame"><%= image_tag booking.instrument.image_url %></div>
        <div class="card-body">
          <h3><%= "#{booking.instrument.make + ' ' + booking.instrument.instrument_name}"%></h3>
          <p>Booking Start Date : <%= booking.start_date %></p>
          <p>Booking End Date : <%= booking.end_date %></p>
          <p>Cost : Â£<%= booking.instrument.daily_rate * (booking.end_date - booking.start_date) %>
        </div>
      </div>
    <% end %>
  </div>

  <div><%= link_to 'Search again', root_path, class: "btn btn-primary" %></div>
</div>

<div class="d-flex justify-content-around">
  <div class="container" style="width: 200rem; margin-top: 32px;">
    <h2 style="text-align:center;">Your Bookings</h2>
    <!-- <div class="cards"> -->
      <div class="d-flex justify-content-around" style="background-color: black;">
      <% @bookings.each do |booking| %>
        <div class="card-product">
          <!-- <div class="img-frame"> -->
            <!-- <#% if booking.instrument.photo.key.nil? %> -->
              <%= image_tag "pianos/clock_icon.png", alt: "Musical Emporium" %>
            <!-- <#% else %> -->
              <!-- <#%= cl_image_tag(booking.instrument.photo.key) %> -->
            <!-- <#% end %> -->
          <!-- </div> -->
          <div class="card-product-infos">
            <h4><%= "#{booking.instrument.make + ' ' + booking.instrument.instrument_name}"%></h4>
            <p>Booking Start Date : <%= booking.start_date %></p>
            <p>Booking End Date : <%= booking.end_date %></p>
            <p>Cost : Â£<%= booking.instrument.daily_rate * (booking.end_date - booking.start_date) %>
          </div>
        </div>
      <% end %>
    </div>

    <!-- <div><#%= link_to 'Search again', root_path, class: "btn btn-primary" %></div> -->
  </div>


  <div class="container" style="width: 200rem; margin-top: 32px;">
    <h2 style="text-align:center;">Your Instruments</h2>
    <!-- <div class="cards"> -->
      <div class="d-flex justify-content-around" style="background-color: black;">
      <% @instruments.each do |instrument| %>
        <div class="card-product">
          <!-- <div class="img-frame"> -->
            <!-- <#% if instrument.photo.key.nil? %> -->
              <%= image_tag "pianos/keyboard.png", alt: "keyboard-icon" %>
            <!-- <#% else %> -->
              <!-- <#%= cl_image_tag(instrument.photo.key) %> -->
            <!-- <#% end %> -->
          <!-- </div> -->
          <div class="card-product-infos">
            <h4><%= "#{instrument.make + ' ' + instrument.instrument_name}"%></h4>
            <p><strong>
              <%= "#{instrument.instrument_type}" %>
            </strong></p>
            <div class="d-flex justify-content-center">
              <%= link_to 'Edit',
              edit_instrument_path(instrument), class: "btn btn-outline-dark btn-sm m-3" %>
              <%= link_to 'Delete',
                    instrument_path(instrument), class: "btn btn-outline-dark btn-sm m-3",
                    method: :delete,
                    data: { confirm: "Are you sure you want to delete this instrument?"} %>
            </div>
          </div>
        </div>

      <% end %>
    </div>

    <!-- <div><#%= link_to 'Search again', root_path, class: "btn btn-primary" %></div> -->
  </div>
</div>




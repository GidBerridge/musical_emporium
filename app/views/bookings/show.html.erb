<div class="container">
   <div class="row justify-content-center flex-basis-100%" >
    <div class="col-12 ">

        <div class="heading">
        <h2><%= "Thank you for your reservation!" %></h2>
        <h4><%= "The owner will be in touch shortly, to confirm, your booking" %></h4>
        </div>

        <div class="card-product">
        <!-- <div class="img-frame"> -->
          <% if @booking.instrument.photo.key.nil? %>
              <%= image_tag "instrument-stall.jpg", alt: "Musical Emporium" %>
            <% else %>
              <%= cl_image_tag(@booking.instrument.photo.key) %>
            <% end %>

          <div class="card-product-infos">
            <h3><%= "#{@booking.instrument.make + ' ' + @booking.instrument.instrument_name}"%></h3>
            <p>Booking Start Date : <%= @booking.start_date %></p>
            <p>Booking End Date : <%= @booking.end_date %></p>
            <p>Cost : <%= number_to_currency(@booking.instrument.daily_rate * (@booking.end_date - @booking.start_date), unit: "Â£") %>
          </div>
        <!-- </div> -->
      </div>


    </div>
  </div>
  <!-- <div><#%= link_to 'All bookings', instrument_bookings_path, class: "btn btn-primary" %></div> -->
  <div><%= link_to 'Make a new booking', instruments_path, class: "btn btn-primary" %></div>
  <div><%= link_to 'Your dashboard', profile_path, class: "btn btn-primary" %></div>
</div>

<div class="container">
  <div class="form-wrapper">
    <h2>Check availability</h2>
    <p>Daily Rate: <%= number_to_currency(@instrument.daily_rate, unit: "£") %></p>
    <p>Item: <%= @instrument.instrument_name %></p>

    <%#= simple_form_for Booking.new do |f| %>
    <%= simple_form_for [@instrument, @booking] do |f| %>
      <%= f.input :start_date, as: :string, required: true, input_html: {class: "datepicker"} %>
      <%= f.input :end_date, as: :string, required: true, input_html: {class: "datepicker"} %>

      <%= f.button :submit, "Reserve", class: "btn btn-primary" %>
      <!-- <p>Cost : £ <#%= @instrument.daily_rate * (@booking.end_date - @booking.start_date) %></p> -->
    <% end %>
    <br>
      <%= link_to "Back to search", :back, class: "btn btn-basic m-2" %>
  </div>



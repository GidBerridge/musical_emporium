<%= render 'shared/show.html.erb' %>

<div class="container">
  <div class="row">
    <div class="col-xs-12 col-sm-10 col-sm-offset-1">

      <div class="heading">
        <h1><%= "Take a closer look" %></h1>

        <div class="instrument-image"> <%#= cl_image_tag(@instrument.photo.key) %></div>

        <div class="instrument-image">
          <% if @instrument.photo.key.nil? %>
            <%= image_tag "instrument-stall.jpeg", alt: "Musical Emporium" %>
          <% else %>
            <%#= cl_image_tag(@instrument.photo.key) %>
          <% end %>
        </div>

      </div>
      <table class="table table-bordered">
        <tbody>
          <tr>
            <th scope="row">Instrument</th>
            <td><%= @instrument.instrument_type %></td>
          </tr>
          <tr>
            <th scope="row"><%= @instrument.make + " " + @instrument.instrument_name%></th>
            </div>
          <tr>
            <th scope="row">Daily Rate</th>
            <td>Â£<%= @instrument.daily_rate %></td>
          </tr>
          <tr>
            <th scope="row">Delivery Options</th>
            <td><%= @instrument.delivery_option %></td>
          </tr>
        </tbody>
      </table>
      <div id="map"
     style="width: 100%; height: 600px;"
     data-markers="<%= @markers.to_json %>"
     data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>"></div>

    <%= link_to 'Add a new instrument listing', new_instrument_path, class: "btn btn-basic m-2" %>
    <%= link_to "Back to #{@instrument.instrument_type}s", :back, class: "btn btn-basic m-2" %>
    <%= link_to 'Make a booking', new_instrument_booking_path(@instrument), class: "btn btn-basic m-2" %>


    </div>
  </div>
</div>



